<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbg"
    android:clipChildren="false"
    android:focusable="false"
    tools:context="com.example.yedaye.firsttv.activitys.ConnectActivity">


    <com.example.yedaye.firsttv.widgets.BorderImageButton
        android:id="@+id/play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/buttons_bg1"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:src="@drawable/buttons_play" />

    <ImageView
        android:id="@+id/title_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/play_btn"
        android:layout_centerHorizontal="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingTop="10dip"
        android:src="@drawable/title" />

    <ImageView
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingLeft="5dip"
        android:paddingTop="5dip"
        android:src="@drawable/clock"
        android:visibility="gone" />

    <SeekBar
        android:id="@+id/timer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/clock"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingBottom="5dip"
        android:paddingLeft="5dip"
        android:paddingRight="10dip"
        android:paddingTop="8dip"
        android:visibility="gone" />

    <com.example.yedaye.firsttv.connect.GameView
        android:id="@+id/game_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timer"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusable="false"
        android:orientation="horizontal"
        android:paddingBottom="10dip">

        <com.example.yedaye.firsttv.widgets.BorderImageButton
            android:id="@+id/refresh_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/refresh"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_refresh_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:text="3"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:visibility="gone" />

        <com.example.yedaye.firsttv.widgets.BorderImageButton
            android:id="@+id/tip_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/light_bulb"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_tip_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:text="3"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>
